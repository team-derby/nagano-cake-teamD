<h2>注文一覧画面</h2>
<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th>購入日時</th>
			<th>購入者</th>
			<th>注文個数</th>
			<th>注文ステータス</th>
		</tr>
	</thead>

	<tbody>
		<% @orders.each do |order| %>
			<tr>
				<td>
					<%= link_to admin_order_path(order) do %>
						<%= l order.created_at %>
					<% end %>
				</td>
				<td>
					<%= order.user.first_name_kanji %><%= order.user.last_name_kanji %>
				</td>
				<td>
					<%= order.order_items.sum(:count) %>
				</td>
				<td>
					<%= order.request_status %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>