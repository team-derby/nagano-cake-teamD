<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h2>会員詳細画面</h2>
      <p id="notice"><%= notice %></p>
        <table class="table">
          <tr>
            <th>顧客ID</th>
            <td><%= @user.id %><%= @user.profile_status %></td>
          </tr>
          <tr>
            <th>氏名</th>
            <td><%= @user.first_name_kanji %><%= @user.last_name_kanji %></td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td><%= @user.first_name_kana %><%= @user.last_name_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= @user.post_number %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= @user.address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= @user.phone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <th><%= link_to "編集する", edit_admin_user_path, class: "btn btn-md btn-primary" %></th>
            <th><%= link_to "注文履歴一覧をする", user_user_orders_path(@user), class: "btn btn-md btn-primary" %></th>
          </tr>
        </table>
    </div>
  </div>
</div>
