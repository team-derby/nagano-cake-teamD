  <div class="row">
      <h2>会員一覧画面</h2>
  </div>
      <table class="table table-hover">
        <thead>
          <tr class="active">
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
           <tr>
            <th><%= user.id %></th>
            <th><%= link_to admin_user_path(user) do %>
            <%= user.first_name_kanji %>
            <%= user.last_name_kanji %>
            <% end %></th>
            <th><%= user.email %></th>
            <th><%= user.profile_status %></th>
            <% end %>
          </tr>
        </tbody>
      </table>
      <%= paginate @user, class: "paginate" %>