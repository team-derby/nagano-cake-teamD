<div class="container">
  <div class="row">
    <div class="col-xs-9">
      <h2>会員編集画面</h2>
      <%= form_for(@user) do |f| %>
        <table class="table">
          <tr>
            <th>顧客ID</th>
            <td><% user.status %></td>
          </tr>
          <tr>
            <th>氏名</th>
            <td><% user.first_name_kanji %><% user.last_name_kanji %></td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td><% user.first_name_kana %><% user.last_name_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><% user.post_number %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><% user.address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><% user.phone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><% user.email %></td>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <td><% user.address %></td>
            <th><%= link_to "有効" %></th>
            <th><%= link_to "退会済み" %></th>
          </tr>
          <tr>
            <th><% f.submit "変更点を保存する" %></th>
          </tr>
        </table>
        <% end %>
    </div>
  </div>
</div>