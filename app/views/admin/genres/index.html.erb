<div class="row">
  <h2 class="heading">ジャンル追加・一覧画面</h2>

  <!-- フラッシュメッセージ -->
  <p id="notice"><%= notice %></p>

  <div class="row">
    <div class="col-xs-12">
      <%= form_for @genre, url: admin_genres_path do |f| %>

        <!-- エラーメッセージ -->
        <%= render 'layouts/errors', obj: @genre %>

        <!-- 入力フォーム -->
        <div class="genre-field">
          <%= f.label :ジャンル　%>
          <%= f.text_field :name %>
          <%= f.radio_button :active_status , :有効 %>
          <%= f.label :有効　%>
          <%= f.radio_button :active_status , :無効 %>
          <%= f.label :無効　%>
        </div>
        <div class="genre-button">
          <%= f.submit "追加", class: "btn btn-md btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
  <br>
  <!-- ジャンル一覧 -->
  <div class="row">
    <div class="col-xs-6">
      <table class="table table-hover">
        <thead>
          <tr class="active">
            <th>ジャンル</th>
            <th>状態</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= genre.active_status %></td>
              <td><%= link_to "編集する",edit_admin_genre_path(genre), class: "btn btn-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <!-- ページング -->
    <%= paginate @genres, class: "paginate" %>
  </div>
</div>