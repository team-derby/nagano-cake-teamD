<div class = "row">
  <div class="col-sm-3"></div>
    <div class="col-sm-6">
      <div class="card-body">
        <h2 class="mt-1 mb-3">Nagano Cake 新規会員登録</h2>
        <div class="form-group">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
              <div class="form-inline">
                <%= f.label :氏名（漢字）, :class => "form-label" %>
                <%= f.label :姓, :class => "form-label" %>
                <%= f.text_field :first_name_kanji, autofocus: true, autocomplete: "first_name_kanji", :class => "form-control" %>
                <%= f.label :名, :class => "form-label" %>
                <%= f.text_field :last_name_kanji, autofocus: true, autocomplete: "last_name_kanji", :class => "form-control" %>
              </div>
              <div class="form-inline">
                <%= f.label :氏名（カナ）, :class => "form-label" %>
                <%= f.label :セイ, :class => "form-label" %>
                <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", :class => "form-control" %>
                <%= f.label :メイ, :class => "form-label" %>
                <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", :class => "form-control" %>
              </div>

            <div class="form-group">
              <%= f.label :"郵便番号(ハイフンなし)", :class => "form-label" %>
              <%= f.text_field :post_number, autofocus: true, autocomplete: "post_number", :class => "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :住所, :class => "form-label" %>
              <%= f.text_field :address, autofocus: true, autocomplete: "address", :class => "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :電話番号, :class => "form-label" %>
              <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", :class => "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :メールアドレス, :class => "form-label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :パスワード, :class => "form-label" %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", :class => "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :パスワード（確認）, :class => "form-label" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form-control" %>
            </div>

            <div class="actions">
              <%= f.submit "登録", :class => "btn btn-primary btn-block" %>
            </div>
          <% end %>

          <%= render "users/shared/links" %>
        </div>
      </div>
    </div>
  <div class="col-sm-3"></div>
</div>
