<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :名前 %><br />
    <h3>(姓)</h3>
    <%= f.name_field :first_name_kanji %>
    <h3>(名)</h3>
    <%= f.name_field :last_name_kanji　%>
  </div>

  <div class="field">
    <%= f.label :フリガナ %><br />
    <h3>(セイ)</h3>
    <%= f.name_field :first_name_kana %>
    <h3>(メイ)</h3>
    <%= f.name_field :last_name_kana %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :郵便番号(ハイフンなし) %><br />
    <%= f.text_field :post_number %>
  </div>

  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :電話番号(ハイフンなし) %><br />
    <%= f.text_field :phone_number %>
  </div>

  <div class="field">
    <%= f.label :パスワード(6文字以上) %><br />
    <%= f.password_field :encrypted_password, autocomplete: "new-password" %>
  </div>

 <div class="field">
    <%= f.label :パスワード(確認用) %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h2>既に登録済みの方</h2>
<%= link_to 'こちら', new_user_session_path %>

<%= render "users/shared/links" %>
