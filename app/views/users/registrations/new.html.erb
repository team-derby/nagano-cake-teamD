<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<div class="row">
  <div class="col-xs-3">
    <div class="field">
      <%= f.label :姓（漢字） %><br />
      <%= f.text_field :first_name_kanji, autofocus: true, autocomplete: "first_name_kanji" %>
    </div>
  </div>
  <div class="col-xs-3">
    <div class="field">
      <%= f.label :名（漢字） %><br />
      <%= f.text_field :last_name_kanji, autofocus: true, autocomplete: "last_name_kanji" %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-xs-3">
    <div class="field">
      <%= f.label :姓（カナ） %><br />
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
    </div>
  </div>
  <div class="col-xs-3">
    <div class="field">
      <%= f.label :名（カナ） %><br />
      <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
    </div>
  </div>
</div>

  <div class="field">
    <%= f.label :"郵便番号(ハイフンなし)" %><br />
    <%= f.text_field :post_number, autofocus: true, autocomplete: "post_number" %>
  </div>

  <div class="field">
    <%= f.label :住所 %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :電話番号 %><br />
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
  </div>
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
