<div class="container">
  <div class="row">
    <div class="main col-md-offset-3 col-md-6">
      <%= form_for @user, url: user_user_path, method: :patch do |f| %>

      <% if @user.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
    <ul>
      <p><%= @user.errors.count %>errors prohibited this obj from being saved:</p>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
      </div>
      <% end %>

        <h2>登録情報編集</h2>
      <div class="col-xs-9">
        <table class="table">
        <tr>
          <td>名前</td>
          <td><%= f.label :'（姓）' %></td>
          <td><div class="field">
          <%= f.text_field :first_name_kanji, class: "first_name_kanji" %>
        </div></td>
          <td><%= f.label :'（名）　' %></td>
          <td><div class="field">
          <%= f.text_field :last_name_kanji, class: "last_name_kanji" %>
        </div></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= f.label :'（セイ）' %></td>
          <td><div class="field">
          <%= f.text_field :first_name_kana, class: "first_name_kana" %>
        </div></td>
          <td><%= f.label :'（メイ）' %></td>
          <td><div class="field">
          <%= f.text_field :last_name_kana, class: "last_name_kana" %>
        </div></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><div class="field">
          <%= f.text_field :email, class: "email" %>
        </div></td>
        </tr>
        <tr>
          <td>郵便番号（ハイフンなし）</td>
          <td><div class="field">
          <%= f.text_field :post_number, class: "post_number" %>
        </div></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><div class="field">
          <%= f.text_field :address, class: "address" %>
        </div></td>
        </tr>
        <tr>
          <td>電話番号（ハイフンなし）</td>
          <td><div class="field">
          <%= f.text_field :phone_number, class: "phone_number" %>
        </div></td>
        </tr>
        <tr>
          <td><%= f.submit "編集内容を保存する", class: "btn btn-md btn-primary" %></td>
          <td><%= link_to "退会する",user_confirm_path, class: 'btn btn-danger btn-md' %></td>
        </tr>
          </table>
        <% end %>
      </div>
    </div>
  </div>
</div>
