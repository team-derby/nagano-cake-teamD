<div class="container">
  <div class="row">
    <div class="main col-md-offset-3 col-md-6">
        <h2>登録編集</h2>
      <div class="col-xs-9">
        <table class="table">
        <%= form_for(@user) do |f| %>
        <tr>
          <td>名前</td>
          <td>（姓）</td>
          <td><div class="field">
          <%= f.label :first_name_kanji %>
          <%= f.text_field :first_name_kanji, class: "first_name_kanji" %>
        </div></td>
          <td>（名）</td>
          <td><div class="field">
          <%= f.label :last_name_kanji %>
          <%= f.text_field :last_name_kanji, class: "last_name_kanji" %>
        </div></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td>（セイ）</td>
          <td><div class="field">
          <%= f.label :first_name_kana %>
          <%= f.text_field :first_name_kana, class: "first_name_kana" %>
        </div></td>
          <td>（メイ）</td>
          <td><div class="field">
          <%= f.label :last_name_kana %>
          <%= f.text_field :last_name_kana, class: "last_name_kana" %>
        </div></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><div class="field">
          <%= f.label :email %>
          <%= f.text_field :email, class: "email" %>
        </div></td>
        </tr>
        <tr>
          <td>郵便番号（ハイフンなし）</td>
          <td><div class="field">
          <%= f.label :post_number %>
          <%= f.text_field :post_number, class: "post_number" %>
        </div></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><div class="field">
          <%= f.label :address %>
          <%= f.text_field :address, class: "address" %>
        </div></td>
        </tr>
        <tr>
          <td>電話番号（ハイフンなし）</td>
          <td><div class="field">
          <%= f.label :phone_number %>
          <%= f.text_field :phone_number, class: "phone_number" %>
        </div></td>
        </tr>
        <tr>
          <td><%= link_to,"編集内容を保存する" %></td>
          <td><%= link_to,"退会する" %></td>
        </tr>
        <% end %>
        </table>
      </div>
    </div>
  </div>
</div>