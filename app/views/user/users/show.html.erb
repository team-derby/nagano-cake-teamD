<div class="container">
  <div class="row">
    <div class="main col-md-offset-3 col-md-6">
        <h2>マイページ</h2>
      <div class="col-xs-5">
        <table class="table">
        <tr>
          <th>登録情報</th>
          <td><%= link_to "編集する",edit_user_user_path(@user), class: "btn btn-md btn-primary" %></td>
          <td><%= link_to "パスワード変更する",edit_user_password_path, class: "btn btn-md btn-primary" %></td>
        </tr>

        <tr>
          <th>氏名</th>
          <td><%= @user.first_name_kanji %>　
          <%= @user.last_name_kanji %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= @user.first_name_kana %>　
          <%= @user.last_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @user.post_number %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @user.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @user.phone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>

        <tr>
          <th>配達先　　</th>
          <td><%= link_to "一覧を見る",user_user_deliveries_path(@user), class: "btn btn-md btn-primary" %></td>
        <br>
          <th>注文履歴　</th>
          <td><%= link_to "一覧を見る",user_user_orders_path(@user), class: "btn btn-md btn-primary" %></td>
        </tr>
        </table>
      </div>
    </div>
  </div>
</div>
