<div class="container">
  <div class="row">
    <div class="main col-md-offset-3 col-md-6">
        <h2>マイページ</h2>
      <div class="col-xs-9">
        <table class="table">
        <tr>
          <th>登録情報</th>
          <td><%= link_to edit_user_user_path,"編集する"%></td>
          <td><%= link_to edit_user_password_path,"パスワード変更する"%></td>
        </tr>
        <% @users.each do |user| %>
        <tr>
          <th>氏名</th>
          <td><% user.first_name_kanji %><% user.last_name_kanji %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><% user.first_name_kana %><% user.last_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><% user.post_number %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><% user.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><% user.phone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><% user.email %></td>
        </tr>
        <% end %>
        <tr>
          <th>配達先</th>
          <td><<%= link_to user_user_deliveries_path,"一覧を見る" %></td>
        </tr>
        <tr>
          <th>注文履歴</th>
          <td><<%= link_to user_user_orders_path,"一覧を見る" %></td>
        </tr>
        </table>
      </div>
    </div>
  </div>
</div>