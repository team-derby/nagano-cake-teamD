  <div class="row">
    <h2><span style="background-color: #F5F5F5;">ショッピングカート</span></h2>
    <%= link_to "カートを空にする", destroy_all_user_user_cart_items_path, method: :delete, data: {confirm: "本当に空にしてもよろしいですか？"}, class: 'btn btn-danger btn-md' %>
