<div class="contaier">
  <div class="row">
    <h2><span style="background-color: #F5F5F5;">配送先編集</span></h2>

    <!-- フラッシュメッセージ -->
    <p id="notice"><%= notice %></p>

      <%= form_for @delivery, url: user_user_delivery_path(user_id: current_user.id, id: @delivery.id), method: :patch do |f| %>

        <!-- エラーメッセージ -->
        <%= render 'layouts/errors', obj: @delivery %>

      <table style="border:none; border-collapse: separate;
border-spacing: 20px 10px;" width="700">

        <tr>
          <th><%= f.label :'郵便番号(ハイフンなし)' %></th>
          <td><%= f.text_field :post_number %></td>
        </tr>
        <tr>
          <th><%= f.label :'住所' %></th>
          <td><%= f.text_field :post_address, size: "50x10" %></td>
        </tr>
        <tr>
          <th><%= f.label :'宛名' %></th>
          <td><%= f.text_field :post_name %></td>
          <td><%= f.submit "編集する", class: 'btn btn-success btn-md' %></td>
        </tr>
      </table>
    <% end %>
  </div>
</div>